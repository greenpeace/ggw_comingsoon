# If you have OpenSSL installed, we recommend updating
# the following line to use "https"
source 'http://rubygems.org'

gem "middleman", "= 3.3.3"

# Live-reloading plugin
gem "middleman-livereload", "~> 3.3.4"

gem "padrino-helpers", '= 0.12.2'
gem "padrino-support", '= 0.12.2'

gem "middleman-syntax"

# Automatically add vendor prefixes to CSS rules
gem 'middleman-autoprefixer'

# Template for dealing with IE8
gem "sass-media_query_combiner"

# Import Sass files based on globbing pattern.
gem "sass-globbing"

# Singularity grid system
gem 'singularitygs', '~> 1.4.0'

gem 'middleman-title'

#Deploy Middleman build via rsync, ftp, sftp, or git (e.g. gh-pages on github).
gem 'middleman-deploy'
