title: Santa Doe Claus
body_class: not-front logged-in page-profile l-two-column
profile: home
access: other
user_role: lu
design_status: Work in progress
action_menu:
  -
    id: "#block-user-profile"
    label: "Profile"
    icon: "user"
  -
    id: "#block-skills"
    label: "Skills"
    icon: "skills"
  -
    id: "#block-friends"
    label: "Friends"
    icon: "users"
  -
    id: "#block-comments"
    label: "Shoutbox"
    icon: "chat"
  -
    id: "#block-user-events"
    label: "Events"
    icon: "event"
  -
    id: "#block-user-groups"
    label: "Groups"
    icon: "users"
---

= partial :"blocks/breadcrumbs"

.l-main-column
  %h1.group-heading.only-mobile
    %i.icon-user
    Santa Doe Claus
  #block-user-profile.block.current
    %i.block-icon.icon-bg-user.icon-user
    %h1#page-title.block-title
      Profile

    .content

      .field-name-user-image

      .field.field-name-user-name
        Santa Doe Claus
        %span.username (santa_claus)

      .field.field-name-body
        .field-label.element-hidden About me:
        .field-item


      .clear

      .field.field-name-field-social-media.field-inline-block
        .field-label Social media:
        .field-item This user has no social media profiles.

      .field.field-name-field-skype.field-inline-block


      .field.field-name-field-mail.field-inline-block
        .field-label Email:
        .field-item santa_doe_claus@greenpeace.org

      .field.field-name-field-telephone.field-inline-block
        .field-label Phone:
        .field-item 065 983 8973

      .field.field-name-field-location.field-inline-block
        .field-label Address:
        .field-item Ottho Heldringstraat 5, Amsterdam, The Netherlands

      .field.field-name-field-profession.field-inline-block
        .field-label Profession:
        .field-item -

      .field.field-name-send-message
        %p
          %a.modal-inline.button.btn-primary{:href => "#send-private-message"} Send a private message


  #block-skills.block
    %i.block-icon.icon-bg-user.icon-skills
    %h2.block-title
      Skills

    .content
      %p Santa Doe Claus hasn't entered any skills yet. Post a shout to ask him about his skills.

  #block-user-events.block.lazyload{"data-expand" => "-40"}
    %i.block-icon.icon-bg-user.icon-event
    %h2.block-title Events
    .content
      :markdown
        Santa Doe Claus hasn't joined any Greenwire event yet.

  #block-user-groups.block.lazyload{"data-expand" => "-40"}
    %i.block-icon.icon-bg-user.icon-users
    %h2.block-title Groups
    .content
      .views-row
        %article.node-type-small
          %h2.node-title
            %a{:href => "./group-home.html"}
              Greenpeace Greenwire United Kingdom
          .field.field-created
            .field-label Joined
            .field-item today

  #block-user-activity.block.lazyload{"data-expand" => "-40"}
    %i.block-icon.icon-bg-user.icon-clock
    %h2.block-title Activity log
    .content
      .view-ggw-user-activity
        .view-content
          .views-row
            .views-field.views-field-timestamp
              Today
            .views-field.views-field-rendered-entity
              %p
                %a{:href => "#"} John Doe Claus
                joined
                %a{:href => "#"} Greenpeace Greenwire United Kingdom

%aside.l-sidebar.sidebar
  #block-friends.block
    .action-bar
      .action-bar-item.add-content
        %a.button{:href => "#", :title => "Add as friend"} Send friend request

    %i.block-icon.icon-bg-user.icon-users
    %h2.block-title Friends
    .content
      %p Santa Doe Claus doesn't have any friends yet. Click on the button to add Santa Doe Claus as a friend.

  #block-comments.block.block-comments
    %i.block-icon.icon-chat.icon-bg-action
    %h2.block-title Shoutbox

    .content
      .comment-form-holder
        %form.comment-form
          .form-comment-message
            %textarea#shoutbox-comment{:cols => "50", :placeholder => "Write a shout...", :rows => "1"}
            %span#remain
            %input.form-comment-submit{:type => "submit", :value => "share"}
            %input.tooltip.form-comment-file{:accept => "image/*", "data-tip" => "Attach a photo", :type => "file"}

      %section.comments
        %p There are no shouts yet.

#send-private-message.block.white-popup.mfp-hide
  %i.block-icon.icon-mail.icon-bg-user
  %h2.block-title Send a private message
  .content
    %form.node-form.node-private-message-form
      .form-wrapper
        .form-item
          %label To:
          %input.form-text{:type => "text", :value => "Santa Doe Claus", :disabled => "disabled"}

        .form-item
          %label Subject:
          %input.form-text{:type => "text", :value => "",  :placeholder => "This subject is shown in the notification the user receives"}
        .form-item.form-type-textarea
          %label{:for => "edit-body-und-0-value"}
            Message:
            %span.form-required{:title => "This field is required."} *
          .form-textarea-wrapper.fullwidth
            %textarea#edit-body-und-0-value.text-full.form-textarea{:rows => "8"}
        .form-actions
          %input.button.btn-primary{:type => "submit", :value => "Send message"}
