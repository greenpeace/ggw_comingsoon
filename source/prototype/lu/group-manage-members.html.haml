---
title: Manage members of this group
body_class: not-front logged-in page-manage-group-members l-has-sidebar
direct_parent:
  -
    name: "Groups"
    url: "./../lu/groups.html"
  -
    name: "Emlyn Garden Local Group"
    url: "./group-home-enrolled.html"
user_role: cm
action_menu:
  -
    id: "#content"
    label: "Manage group"
    icon: "users"
  -
    id: "#block-go-to-group"
    label: "Groups"
    icon: "users"
  -
    id: "#block-group-add-members"
    label: "Add members"
    icon: "user-add"
  -
    id: "#block-filter-members"
    label: "Filters members"
    icon: "adjust"
---

= partial :"blocks/breadcrumbs"

.l-main-column

  #content.block.current

    %i.block-icon.icon-bg-default.icon-users
    %h1.block-title#page-title
      = current_page.data.title

    .content

      .view-header
        %form
          .action-bar
            .action-bar-item.resultstats 45 Members

            .action-bar-item.sorting
              %label Sort by
              %a.button.sorting{"data-dropdown" => "#sort-results", :href => "#", :title => "Click to show options"}
                %span Name
              #sort-results.dropdown.dropdown-tip.dropdown-relative
                %ul.dropdown-menu
                  %li
                    %a{:href => "#"} Name
                  %li
                    %a{:href => "#"} Username
                  %li
                    %a{:href => "#"} E-mail
                  %li
                    %a{:href => "#"} Phone
                  %li
                    %a{:href => "#"} Status
                  %li
                    %a{:href => "#"} Member since
                  %li
                    %a{:href => "#"} Request message

            .action-bar-item.results-page
              %label Results per page
              %a.button.results-page{"data-dropdown" => "#page-results", :href => "#", :title => "Click to show options"}
                %span 20
              #page-results.dropdown.dropdown-tip.dropdown-relative
                %ul.dropdown-menu
                  %li
                    %a{:href => "#"} 20
                  %li
                    %a{:href => "#"} 50
                  %li
                    %a{:href => "#"} 100

            .row.action-bar-item.actions
              %label Actions
              %a.button.results-page{"data-dropdown" => "#actions", :href => "#", :title => "Click to show options"}
                %span Actions
              #actions.dropdown.dropdown-tip.dropdown-relative.dropdown-anchor-right
                %ul.dropdown-menu
                  %li
                    %a{:href => "#"} Export CSV
                  %li
                    %a{:href => "#"} Export XLS
                  %hr
                  %li
                    %a{:href => "#"} Send message
                  %li
                    %a{:href => "#"} Send email
                  %li
                    %a{:href => "#"} Change membership status
                  %li
                    %a{:href => "#"} Change role in group

      .view-search-results
        .view-content
          %table.tablesaw.tablesaw{"data-tablesaw-mode" => "columntoggle", "data-tablesaw-sortable" => ""}
            %thead
              %tr
                %th.views-field-views-bulk-operations{"data-tablesaw-priority" => "persist"}
                  %input.form-checkbox.js-selectall{:type => "checkbox"}
                %th.views-field-avatar{"data-tablesaw-priority" => "persist"}
                %th.views-field-name{"data-tablesaw-priority" => "persist", "data-tablesaw-sortable-col" => "", "data-tablesaw-sortable-default-col" => ""} Name
                %th.views-field-username{"data-tablesaw-sortable-col" => "", "data-tablesaw-priority" => "1"} Username
                %th.views-field-email{"data-tablesaw-sortable-col" => "", "data-tablesaw-priority" => "2"} Email
                %th{"data-tablesaw-sortable-col" => "", "data-sortable-numeric" => "", "data-tablesaw-priority" => "3"} Phone
                %th{"data-tablesaw-sortable-col" => "", "data-tablesaw-priority" => "4"} Status
                %th{"data-tablesaw-sortable-col" => "", "data-tablesaw-priority" => "5"} Member roles
                %th{"data-tablesaw-sortable-col" => "", "data-tablesaw-priority" => "6"} Member since
                %th{"data-tablesaw-priority" => "6"} Request message

            %tbody
              - 25.times do |num|
                %tr
                  %td
                    %input.form-checkbox{:type => "checkbox"}
                  %td
                    %img.lazyload{:alt => "Name of the author.", :src => "/photos/blank.png", "data-src" => "/photos/75/people3.jpg"}/
                    %noscript
                      %img{:alt => "Name of the author.", :src => "/photos/75/people3.jpg"}/
                  %td
                    = lorem.name
                  %td
                    = lorem.name.downcase.tr(' ', '_')
                  %td
                    = lorem.email
                  %td
                    = rand(100000000)
                  %td
                    active
                  %td
                    -
                  %td
                    = lorem.date
                  %td
                    = lorem.sentence
          .align-center
            %a.button{:href => "#"} show some more

%aside.l-sidebar.sidebar
  = partial :"blocks/lu/belongstogroup"
  = partial :"blocks/lu/block-group-add-members"

  .block#block-filter-members
    %i.block-icon.icon-bg-default.icon-adjust
    %h2.block-title
      Filter
    .content
      %form
        = partial :"blocks/lu/manage-group-filters"
        = partial :"blocks/search_filters/form-action"
