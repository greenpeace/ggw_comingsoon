---
title: Search news & media
body_class: not-front logged-in page-search l-has-sidebar
user_role: an
search_page: newsmedia
listview: search-newsmedia-listview.html
teaserview: search-newsmedia.html
view: list
design_status: Needs review
---

= partial :"blocks/breadcrumbs"

.l-main-column#content

  .block

    %i.block-icon.icon-bg-default.icon-search
    %h1.block-title#page-title
      = current_page.data.title

    .content

      // search box above results
      = partial :"blocks/search-header-search-box"

      .view-header
        = partial :"nav/search-tabs"
        = partial :"nav/search-actions"

      .view-search-results
        .view-content

          %table.tablesaw{"data-mode" => "swipe"}
            %thead
              %tr
                %th.views-field-title{"data-priority" => "persist"}
                  %a{:href => "#", :title => "Sort on Title"} Title
                %th.views-field-type
                  %a{:href => "#", :title => "Sort on Type"} Type
                %th.views-field-body
                  Description
                %th.views-field-created
                  %a{:href => "#", :title => "Sort on Date created"} Date created
                %th.views-field-relevance
                  %a{:href => "#", :title => "Sort on Relevance"} Relevance
                %th.views-field-changed
                  %a{:href => "#", :title => "Sort on Date modified"} Date modified
                %th.views-field-field-tags
                  %a{:href => "#", :title => "Sort on Tags"} Tags

            %tbody
              - 20.times do |num|
                %tr
                  %td
                    = lorem.words 2
                  %td
                    = lorem.word
                  %td
                    = lorem.sentence
                  %td
                    = lorem.date
                  %td
                    88%
                  %td
                    = lorem.date
                  %td
                    = lorem.words 3




%aside.l-sidebar.sidebar
  .block
    %i.block-icon.icon-bg-default.icon-adjust
    %h2.block-title Filter
    .content
      %form

        = partial :"blocks/search_filters/type"
        = partial :"blocks/search_filters/created"
        = partial :"blocks/search_filters/tags"
        = partial :"blocks/search_filters/form-action"

