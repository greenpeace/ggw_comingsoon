title: Manage group members
body_class: not-front logged-in page-manage-group-members no-sidebar is-content-manager
user_role: cm
design_status: Needs review
---

= partial :"blocks/breadcrumbs"

.l-main-column#content

  .block

    %i.block-icon.icon-bg-default.icon-users
    %h1.block-title#page-title
      = current_page.data.title

    %a.button.btn-back{:href => "./group-home-enrolled.html"}
      %i.icon-back
      Back to group dashboard

    .content

      .view-header
        = partial :"blocks/cm/manage-group-info"
      .view-filters
        = partial :"nav/manage-group-actions"

      .view-search-results
        .view-content
          %table.tablesaw{"data-mode" => "swipe"}
            %thead
              %tr
                %th.views-field-views-bulk-operations{"data-priority" => "persist"}
                  %input.form-checkbox{:type => "checkbox"}
                %th.views-field-avatar{"data-priority" => "persist"}
                %th.views-field-name{"data-priority" => "persist"} Name
                %th.views-field-username Username
                %th.views-field-email Email
                %th Phone
                %th Status
                %th Member roles
                %th Member since
                %th Request message

            %tbody
              - 25.times do |num|
                %tr
                  %td
                    %input.form-checkbox{:type => "checkbox"}
                  %td
                    %img.lazyload{:alt => "Name of the author.", :src => "/photos/blank.png", "data-src" => "/photos/75/people3.jpg"}/
                    %noscript
                      %img{:alt => "Name of the author.", :src => "/photos/75/people3.jpg"}/
                  %td
                    = lorem.name
                  %td
                    = lorem.name.downcase.tr(' ', '_')
                  %td
                    = lorem.email
                  %td
                    = rand(100000000)
                  %td
                    active
                  %td
                    -
                  %td
                    = lorem.date
                  %td
                    = lorem.sentence
          .align-center
            %a.button{:href => "#"} show some more
