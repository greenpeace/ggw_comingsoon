---
title: Create new material
body_class: not-front logged-in page-type-material l-has-sidebar-first page-edit
direct_parent:
  -
    name: "Home"
    url: "index.html"
  -
    name: "Materials"
    url: "../lu/materials.html"
user_role: lu
editor: ckeditor
menu:
  -
    name: 'Title, body & image'
    url: '#section-title'
  -
    name: 'Specifications'
    url: '#section-specs'
  -
    name: 'Languages & tags'
    url: '#section-language'
  -
    name: 'Visibility'
    url: '#section-visibility'
---

= partial :"blocks/breadcrumbs"

%aside.sidebar-first.sfmenu
  .block.block-sf-nav.affix-top{"data-spy" => "affix", "data-offset-top" => "110"}
    %i.block-icon.icon-material.icon-bg-news-media
    %h2.block-title Create material
    .content
      - for item in current_page.data.menu
        %a.sf-navbtn{:href => "#{item.url}", "data-scroll" => ""}
          #{item.name}
.l-main-column
  .content
    %section#section-title.block.current.main-content
      %i.block-icon.icon-pencil.icon-bg-action
      %h2.block-title Title, description & image
      .content
        .form-wrapper
          .form-item.field-name-title
            %label.form-label{:for => "edit-field-title"}
              Title
              %span.form-required{:title => "This field is required."} *
            %input#edit-field-title.form-text{:name => "edit-field-title", :type => "text", :value => "", :tabindex => "1"}/
          .form-item
            %label.form-label{:for => "field-edit-body"}
              Description
              %span.form-required{:title => "This field is required."} *
            %textarea#field-edit-description.ckeditor{:name => "field-edit-description", :rows => "15", :cols => "80", :tabindex => "2"}
          .form-item
            %label.form-label{:for => "field-edit-image"}
              Image
              %span.form-required{:title => "This field is required."} *
            .media-widget.media
              .preview.media-figure
              .media-body
                .form-description
                  Files must be smaller than3 MB <br/>
                  Allowed file types: png gif jpg jpeg <br/>
                  Images must be larger than 400x300 pixels.
                %input#uploadimage.element-invisible{:type => "file", :value => "upload", :accept => "image/*"}
                %button.button.launcher{:tabindex => "3"} select image
                %a.button.remove.element-invisible{:href => "#"} remove image

    %section#section-specs.block
      %i.block-icon.icon-material.icon-bg-action
      %h2.block-title Specifications
      .content
        .form-wrapper

          .form-item.form-type-select
            %label.form-label{:for => "campaign"} Related to campaign
            %select#campaign.chosen-select{"data-placeholder" => "Choose a campaign", :multiple => "multiple", :tabindex => "4"}
              - 20.times do |num|
                %option
                  = lorem.words 4

          .form-item.form-type-select
            %label.form-label{:for => "purpose"} Purpose
            .form-description What can this item best be used for ?
            %select#purpose.chosen-select{"data-placeholder" => "Choose a purpose", :multiple => "multiple", :tabindex => "5"}
              %option Decoration
              %option Education
              %option Electronics
              %option Merchandise
              %option Other
              %option Stand Materials
              %option Suits
              %option Volunteers Clothing

          .form-item.form-type-select
            %label.form-label{:for => "state"} State
            .form-description What state is the item in ?
            %select#state.form-select{:tabindex => "6"}
              %option As new
              %option Good
              %option Fair
              %option Bad

          .form-item.form-type-select
            %label.form-label{:for => "material"} Material type
            .form-description Select the type of material.
            %select#material.form-select{:tabindex => "7"}
              %option Metal
              %option Paper
              %option Plastic
              %option Textile
              %option Wood
              %option Other material

          .form-item.form-type-select
            %label.form-label{:for => "location"} Material location
            .form-description Where can this item be found?
            %select#location.form-select{:tabindex => "8"}
              %option Office storage
              %option Office desk area
              %option Brown container
              %option Green container

          .form-item
            %label.form-label
              Quantity
              %span.form-required{:title => "This field is required."} *
            .form-description How many are there available?
            %input.form-text{:type => "text", :value => "", :tabindex => "9"}

    %section#section-language.block
      %i.block-icon.icon-globe.icon-bg-action
      %h2.block-title Languages and tags
      .content
        .form-wrapper
          .form-item.form-type-select
            %label.form-label{:for => "language"} Language
            .form-description What language is this news in? You can select more than one language.
            %select#language.chosen-select{"data-placeholder" => "Choose a language", :multiple => "multiple", :tabindex => "4"}
              %option{:selected => ""} English, US
              %option French

          .form-item
            %label Tags
            %input.form-text.form-autocomplete#tagsinput{:type => "text", :value => "", :tabindex => "5"}
            .autocomplete#tagsautocomplete
              %ul
                - 50.times do |num|
                  %li
                    = lorem.word

    %section#section-visibility.block
      %i.block-icon.icon-eye.icon-bg-action
      %h2.block-title Visibility
      .content
        .form-wrapper
          .form-item.form-type-select
            %label.form-label{:for => "groups"} Group(s)
            %select#groups.chosen-select{"data-placeholder" => "Select one or more groups", :multiple => "multiple", :tabindex => "6"}
              :preserve
                <option value="1">Festivals</option>
                <option value="2">Climate change</option>
                <option value="3">Oceans</option>
                <option value="4" selected>Local group Amsterdam</option>
                <option value="5">Oil spill</option>
                <option value="6">Solar energy</option>
                <option value="7">Save the Arctic</option>

          .form-item.form-type-radios.radio-blocks
            %label.form-label{:for => "edit-group-content-access"}
              Private or public?
              %span.form-required{:title => "This field is required."} *
            .form-radios
              .form-type-radio
                %input#edit-group-content-access-und-0.form-radio{:name => "group_content_access", :type => "radio", :value => "0", :checked => "checked", :tabindex => "7"}
                %label.option{:for => "edit-group-content-access-und-0"} Private - only for group members
              .form-type-radio
                %input#edit-group-content-access-und-1.form-radio{:name => "group_content_access", :type => "radio", :value => "1"}
                %label.option{:for => "edit-group-content-access-und-1"} All members of Greenwire
              .form-type-radio
                %input#edit-group-content-access-und-2.form-radio{:name => "group_content_access", :type => "radio", :value => "2"}
                %label.option{:for => "edit-group-content-access-und-2"} Public - visible for all visitors of Greenwire

    %section#section-submit
      .form-actions.form-wrapper
        %input{:type => "submit", :class => "button btn-primary btn-l", :value => "Submit", :tabindex => "7"}
        %a.button.btn-l{:href => "./documents.html", :tabindex => "8"} Cancel

:javascript
  CKEDITOR.editorConfig = function( config ) {
    config.tabIndex = 3;
    config.contentsCss = 'http://ggw-prototype.goalgorilla.com/css/all.css';
  };
