!!!5
%html.no-js{:lang => "en", :dir=> "ltr"}
  %head
    %meta{:charset => "utf-8"}/
    %meta{:content => "true", :name => "HandheldFriendly"}/
    %meta{:content => "width", :name => "MobileOptimized"}/
    %link{:href => "http://www.w3.org/1999/xhtml/vocab", :rel => "profile"}/
    %link{:href => "http://ggw-prototype.goalgorilla.com/images/favicon.ico", :rel => "shortcut icon", :type => "image/vnd.microsoft.icon"}/
    %meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}/
    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}/
    %title=page_title

    = javascript_include_tag "lazysizes", :async => ""
    = javascript_include_tag "modernizr.js", :async => ""
    
    /[if lte IE 8]
      = javascript_include_tag "html5shiv.min", :async => ""

    <!--[if (gte IE 9)|(gt IEMobile 7)|(!IE)]><!-->
    = stylesheet_link_tag "all"
    <!--<![endif]-->

    // for regression testing we use the old simple way of including the font
    = stylesheet_link_tag "fonticons.woff"

  %body{:class => "#{current_page.data.body_class || page_classes} style-guide"}
    /[if lt IE 7] <p class=chromeframe>Your browser is <em>ancient!</em> <a href="http://browsehappy.com/">Upgrade to a different browser</a> or <a href="http://www.google.com/chromeframe/?redirect=true">install Google Chrome Frame</a> to experience this site.</p>
    .layout-base

      - if current_page.data.design_status
        = partial :status

      .l-branding-header
        .container
          %a.logo{:href => "index.html", :rel => "home", :title => "Home"}
            %span.element-invisible Greenpeace Greenwire  Nederland
          .mobile-nav
            %a#main-menu-show.nav-btn.icon-menu{"data-nav" => "js-nav", :href => "#primary-nav"}
              %span.element-invisible Show primary navigation

      %header.l-header.header
        .container
          = partial :"nav/main"

      .l-main.container#main
        = yield

      = partial :"nav/footer"


    = javascript_include_tag "base"
    = javascript_include_tag "forms", :async => ""
    = javascript_include_tag "modal", :async => ""
    = javascript_include_tag "styleguide"

    - if current_page.data.slider
      = javascript_include_tag "flexslider", :async => ""

    - if current_page.data.comments
      = javascript_include_tag "comments", :async => ""

    /[if lte IE 8]
      = stylesheet_link_tag "old-ie"
      = javascript_include_tag "oldie"
