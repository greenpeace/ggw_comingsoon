!!!5
%html.no-js{:lang => "en", :dir=> "ltr"}
  %head
    %meta{:charset => "utf-8"}/
    %meta{:content => "true", :name => "HandheldFriendly"}/
    %meta{:content => "width", :name => "MobileOptimized"}/
    %link{:href => "http://www.w3.org/1999/xhtml/vocab", :rel => "profile"}/
    %link{:href => "http://ggw-prototype.goalgorilla.com/images/favicon.ico", :rel => "shortcut icon", :type => "image/vnd.microsoft.icon"}/
    %meta{:content => "Drupal 7 (http://drupal.org)", :name => "Generator"}/
    %meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}/
    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}/
    %title=page_title

    = javascript_include_tag  "lazysizes"
    /[if lte IE 8]
      = stylesheet_link_tag "old-ie"
      = javascript_include_tag "html5shiv.min"

    <!--[if (gte IE 9)|(gt IEMobile 7)|(!IE)]><!-->
    = stylesheet_link_tag "all"
    <!--<![endif]-->

    = partial :"loadfont"

    - if current_page.data.editor
      = stylesheet_link_tag "x-editable"
      = javascript_include_tag "//cdn.ckeditor.com/4.4.7/standard/ckeditor.js"
      = javascript_include_tag "ckeditorconfig.js"

  %body{:class => "#{current_page.data.body_class || page_classes}", "data-spy" => "scroll", "data-target" => ".block-sf-nav", "data-offset" => "110"}
    /[if lt IE 7] <p class=chromeframe>Your browser is <em>ancient!</em> <a href="http://browsehappy.com/">Upgrade to a different browser</a> or <a href="http://www.google.com/chromeframe/?redirect=true">install Google Chrome Frame</a> to experience this site.</p>
    .layout-base

      - if current_page.data.cookies
        = partial :"blocks/cookies"

      .l-branding-header.nav-down
        .container
          %a.logo{:href => "./index.html", :rel => "home", :title => "Home"}
            %span.element-invisible Greenpeace Greenwire  Nederland
          .mobile-nav
            %a#main-menu-show.nav-btn.icon-menu{"data-nav" => "js-nav", :href => "#primary-nav"}
              %span.element-invisible Show primary navigation
            %a#secondary-menu-show.nav-btn.icon-user{"data-nav" => "js-nav2", :href => "#secondary-nav"}
              %span.attention-number#combined-number
              %span.element-invisible Show secondary navigation

      = partial :"regions/header"

      .l-main.container#main

        %noscript
          .alert.alert-warning{:role => "alert"}
            %strong Warning!
            Your JavaScript seems to be disabled, this might affect your experience on Greenpeace Greenwire.

        = yield

      = partial :"nav/footer"

      - if current_page.data.user_role == "lu" && current_page.data.user_context != "first-login"
        = partial :"blocks/lu/notifications"
        = partial :"blocks/lu/messages"


    = javascript_include_tag  "theme"

    - if current_page.data.upload == "image" || current_page.data.upload == "document"
      = javascript_include_tag "dropzone"
      = javascript_include_tag "editable/attach_dropzone"

    - if current_page.data.upload == "video"
      = javascript_include_tag "editable/attach_video"

    - if current_page.data.script == "event"
      = javascript_include_tag  "editable/edit-event"

    - if current_page.data.mapsds == "event"
      :javascript
         $(document).ready(function() {
          $('#open-confirm-rsvp').on('click', function(e) {
            e.preventDefault();
            $.magnificPopup.open({
              items: {
                src: '#confirm-rsvp'
              },
              type: 'inline',
            });
          });
        });

    /[if lte IE 8]
      = javascript_include_tag "oldie"
