%header.l-header.header{:role => "banner"}
  .container
    #primary-nav.off-canvas
      .nav-inner-wrap
        = partial :"blocks/search"
        %nav.main-menu{:role => "navigation"}
          %ul.menu

            - if current_page.data.user_role == "lu"
              - data.nav.primary_lu.each do |item|
                %li.menu-item
                  =nav_link item.name, item.url, :class => 'menu-link'

                  - if item.sub
                    %ul.menu
                      - item.sub.each do|hist|
                        %li.menu-item
                          =nav_link hist.name, hist.url, :class => 'menu-link'

            - elsif current_page.data.user_role == "idea"
              - data.nav.idea_menu.each do |item|
                %li.menu-item
                  =nav_link item.name, item.url, :class => 'menu-link'

                  - if item.sub
                    %ul.menu
                      - item.sub.each do|hist|
                        %li.menu-item
                          =nav_link hist.name, hist.url, :class => 'menu-link'

            - else
              - data.nav.primary_an.each do |item|
                %li.menu-item
                  =nav_link item.name, item.url, :class => 'menu-link'

                  - if item.sub
                    %ul.menu
                      - item.sub.each do|hist|
                        %li.menu-item
                          =nav_link hist.name, hist.url, :class => 'menu-link'

    #secondary-nav.off-canvas
      .nav-inner-wrap
        %nav.user-menu{:role => "navigation"}
          %ul.menu

            - if current_page.data.user_role == "lu" || current_page.data.user_role == "cm"
              %li.menu-item
                %a.menu-link{:href => "my-profile.html"}
                  John Doe Claus
              %li.menu-item
                %a.menu-link{:href => "#", "data-dropdown" => "#alerts"}
                  Alerts
                  %span.num-notifications 2
              %li.menu-item
                %a.menu-link{:href => "#", "data-dropdown" => "#notifications"}
                  Updates
                  %span.num-notifications 4
              %li.menu-item
                %a.menu-link{:href => "../an/index.html"} Log out

            - else
              - data.nav.secondary_an.each do |item|
                %li.menu-item
                  =nav_link item.name, item.url, :class => 'menu-link'

        .l-country-selector.country-selector.nav-selector
          .dropdown-controller
            %a.trigger{"data-dropdown" => "#dropdown-content-country", :href => "#"}
              International
              %span.country-img
          #dropdown-content-country.dropdown.dropdown-scroll.relative
            %ul.dropdown-list
              - data.nav.nro.each do |item|
                %li
                  %a{:href => "#"}
                    = item
        .l-language-selector.language-selector.nav-selector
          .dropdown-controller
            %a.trigger{"data-dropdown" => "#dropdown-content-language", :href => "#"} Francais
          #dropdown-content-language.dropdown.dropdown-scroll.relative
            %ul.dropdown-list
              %li
                %a{:href => "#"} Francais
              %li
                %a{:href => "#"} Nederlands
