.block#block-enroll
  %i.block-icon.icon-login.icon-bg-action
  %h2.block-title{"data-amtitle" => "RSVP"} RSVP for this event
  .content
    %form
      %p
        Already a Greenwire member?
        =nav_link 'Log in', data.nav.secondary_an.first['url']
      %p Not a member? RSVP below
      .form-item.form-type-textfield{:action => "./event-full.html", :method => "get"}
        %label{:for => "edit-firstname"}
          First name:
          %span.form-required{:title => "This field is required."} *
        %input#edit-firstname.form-text.required{:tabindex => "1", :type => "text", :value => ""}/
      .form-item.form-type-textfield
        %label{:for => "edit-lastname"}
          Last name:
          %span.form-required{:title => "This field is required."} *
        %input#edit-lastname.form-text.required{:tabindex => "1", :type => "text", :value => ""}/
      .form-item.form-type-textfield
        %label{:for => "edit-emailaddress"}
          Email:
          %span.form-required{:title => "This field is required."} *
        %input#edit-emailaddress.form-text.required{:tabindex => "1", :type => "text", :value => ""}/
      .form-item.form-type-select
        %label{:for => "edit-phonenumber-country"}
          Phone:
          %span.form-required{:title => "This field is required."} *
        %select#edit-phonenumber-country.form-select.required{:tabindex => "1"}
          %option{:value => "be"} Belgium (+32)
          %option{:value => "fr"} France (+33)
          %option{:value => "in"} India (+91)
          %option{:selected => "selected", :value => "nl"} Netherlands (+31)
          %option{:value => "ru"} Russia (+7)
          %option{:value => "th"} Thailand (+66)
          %option{:value => "uk"} United Kingdom (+44)
          %option{:value => "us"} USA (+1)
          %option{:value => "other"} Other
      .form-item.form-type-textfield
        %input#edit-phonenumber.form-text{:tabindex => "1", :type => "text", :value => ""}/
      .form-item.form-type-textarea
        %label{:for => "edit-message"} Message:
        .form-textarea-wrapper.resizable
          %textarea#edit-message.form-textarea{:tabindex => "1"}
      .form-actions
        %input#open-confirm-rsvp.button.btn-primary{:type => "submit", :value => "Save"}/

#confirm-rsvp.block.white-popup.mfp-hide
  %i.block-icon.icon-login.icon-bg-action
  %h2.block-title Please confirm your enrollment

  .content
    %p
      Thank you for your subscription. We have sent you an e-mail with a confirmation link. Please click on the link in the e-mail, so we can keep you updated must anything change.
