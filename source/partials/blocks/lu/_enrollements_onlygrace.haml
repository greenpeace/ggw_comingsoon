.block#block-enrollments
  %i.block-icon.icon-users.icon-bg-event
  %h2.block-title Enrollments
  .content
    %p Why not ask your friends to join as well?
    %a.modal-inline.button.btn-block.btn-primary{:href => "#invite-friends"} Invite friends

  .content
    .enrollments
      - 1.times do |num|
        %a{:href => "#"}
          %img.lazyload{:alt => "Grace O'Flynn", :src => "data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw==", "data-srcset" => "/photos/75/grace.jpg"}/
