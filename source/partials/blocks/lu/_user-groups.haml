#block-user-groups.block.lazyload{"data-expand" => "-40"}
  %i.block-icon.icon-bg-user.icon-users
  - if current_page.data.access == "mine"
    %h2.block-title My groups
  - else
    %h2.block-title Groups

  .content
    .views-row

      - data.groups.my_groups_joined.each do |group, index|
        %article.node-type-small
          %h2.node-title
            %a{:href => "./group-home-organiser.html"}
              = group.name
          .field.field-created
            .field-label Joined
            .field-item #{group.date}

    %a.button{:href => "#"} load more


