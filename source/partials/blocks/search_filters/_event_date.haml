      %input.form-text.selector-value.input-date.js-date-picker{:type => "text", :placeholder => "select date"}
    .form-item.form-type-textfield
      %input.form-text.min.input-date.js-date-picker{:type => "text", :placeholder => "select date"}
    .form-item.form-type-textfield
      %input.form-text.max.input-date.js-date-picker{:type => "text", :placeholder => "select date"}
