.views-row
  %article.node-teaser-event.node-teaser.lazyload{"data-expand" => "0"}
    .field-type-image
      %img.lazyload{:alt => "Example of image.", :src => "/images/event-map-example_90.jpg", "data-sizes" => "(min-width: 48em) 130px, 90px", "data-srcset" => "/images/event-map-example_260.jpg 260w, /images/event-map-example_130.jpg 130w, /images/event-map-example_180.jpg 180w, /images/event-map-example_90.jpg 90w"}/
      %noscript
        %img{:alt => "Example of image.", :src => "/images/event-map-example_90.jpg", "sizes" => "(min-width: 48em) 130px, 90px", "srcset" => "/images/event-map-example_260.jpg 260w, /images/event-map-example_130.jpg 130w, /images/event-map-example_180.jpg 180w, /images/event-map-example_90.jpg 90w"}/
    .field-type-wrapper
      %h2.node-title
        %a{:href => "./event-full.html"}
          = lorem.sentence
      .submitted
        %a.type.event{:href => "./search-events.html"} Event
        %span.created-date 1 Apr 2015, by
        %span.author
          - if current_page.data.user_role != "an"
            %a{:href => "./profile.html"}
              = lorem.name
          - else
            = lorem.name.downcase.tr(' ', '_')
      .field-type-date
        %label Event Time:
        %span 30 Jun, 7:00 - 22:00 GMT
      .field-type-location
        %label Address:
        %span 184 Camden High Street, London (Camden market)
