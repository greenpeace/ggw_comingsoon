- data.news.with_image.each do |item|
  .views-row
    %article.node-teaser-news.node-teaser.lazyload{"data-expand" => "0"}
      .field-type-image
        = partial :"teasers/teaser-image"
      .field-type-wrapper
        %h2.node-title
          %a{:href => "./news-article.html"}
            = item.title
        .submitted
          %a.type.news{:href => "./news.html"} News
          = succeed ", by" do
            = item.date
          - if current_page.data.user_role != "an"
            %a{:href => "./profile.html"}
              = item.author
          - else
            = item.author.downcase.tr(' ', '_')
          - if current_page.data.user_role != "an"
            %a.teaser-comments{:href => "./news-article.html#block-comments"}
              = item.comment_amount
        .field-name-body
          = item.introtext
