.views-row
  %article.node-teaser-event.node-teaser.event-subscribed.lazyload{"data-expand" => "0"}
    .field-type-image
      = partial :"teasers/teaser-image"
    .field-type-wrapper
      %h2.node-title
        %a{:href => "./event-full-organiser.html"}
          = lorem.sentence
      .submitted
        %a.type.event{:href => "./search-events.html"} Event
        .subscribed enrolled
        %span.created-date 15 Mar 2015, by
        %span.author
          - if current_page.data.user_role != "an"
            %a{:href => "./profile.html"}
              = lorem.name
          - else
            = lorem.name.downcase.tr(' ', '_')
      .field-type-date
        %label Event Time:
        %span 10 Aug, 20:00 - 23:30 CET
      .field-type-location
        %label Address:
        %span Oude Markt 9B, Enschede (Market Square)
