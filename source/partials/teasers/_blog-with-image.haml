.views-row
  %article.node-teaser-blog.node-teaser
    .field-type-image
      = partial :"teasers/teaser-image"
    .field-type-wrapper
      %h2.node-title
        %a{:href => "#"}
          = lorem.sentence
      .submitted
        %a.type.blog{:href => "#"} Blog
        11 Aug 2014, by
        - if current_page.data.user_role != "an"
          %a{:href => "#"}
            = lorem.name
        - else
          = lorem.first_name
      .field-name-body
        =lorem.paragraph
