.views-row
  %article.node-teaser-event.node-teaser.lazyload{"data-expand" => "0"}
    .field-type-image
    .field-type-wrapper
      %h2.node-title
        %a{:href => "./event-full.html"}
          = lorem.sentence
      .submitted
        %a.type.event{:href => "./events.html"} Event
        %span.created-date 27 Dec 2014, by
        %span.author
          - if current_page.data.user_role != "an"
            %a{:href => "./profile.html"}
              = lorem.name
          - else
            = lorem.name.downcase.tr(' ', '_')
      .field-type-date
        %label Event Time:
        %span 5 Jul, 8:00 - 12:00 CDT
      .field-type-location
        %label Address:
        %span 3000 E Calhoun Parkway, Minneapolis (Lake Calhoun Park)
