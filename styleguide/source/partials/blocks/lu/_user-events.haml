#block-user-events.block.lazyload{"data-expand" => "-40"}
  - if current_page.data.access == "mine"
    .action-bar
      .action-bar-item.edit-content
        %a.button{:href => "./create-event.html", :title => "Create new event"} Add event
  %i.block-icon.icon-bg-user.icon-event
  - if current_page.data.access == "mine"
    %h2.block-title{"data-amtitle" => "My events"} My events
  - else
    %h2.block-title{"data-amtitle" => "Events"} Events

  .content

    .tabwrapper.tabable-wrapper
      %ul.tabs
        %li
          =nav_link 'Upcoming events', '#upcoming-events', :class => 'tab'
        %li
          =nav_link 'Past events', '#past-events', :class => 'tab'

    .tabable
      #upcoming-events.tabable-block.active

        - data.event.to_join.each do |item|
          %article.node-type-small
            %h2
              %a{:href => "./event-full-induction-training-enrolled.html"}
                = item.title
            .date-display-single
              = item.date

        - data.event.with_image_organising.each do |item|
          %article.node-type-small
            %h2
              %a{:href => "./event-full-organiser.html"}
                = item.title
            .date-display-single
              = item.date

        - data.event.upcoming.each do |item|
          %article.node-type-small
            %h2
              - if current_page.data.access == "mine"
                %a{:href => "./event-full-enrolled.html"}
                  = item.title
              - else
                %a{:href => "./event-full.html"}
                  = item.title
            .date-display-single
              = item.date

        %a.button{:href => "./events.html"} load more

      #past-events.tabable-block

        - data.event.past.each do |item|
          %article.node-type-small
            %h2
              - if current_page.data.access == "mine"
                %a{:href => "./event-full-organiser.html"}
                  = item.title
              - else
                %a{:href => "./event-full.html"}
                  = item.title
            .date-display-single
              = item.date

        %a.button{:href => "./events.html"} load more
