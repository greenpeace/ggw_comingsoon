---
title: Search events
body_class: not-front logged-in page-search l-has-sidebar
user_role: lu
search_page: events
---

= partial :"blocks/breadcrumbs"

.l-main-column

  #content.block.current
    = partial :"blocks/lu/add-content"
    %i.block-icon.icon-bg-event.icon-search
    %h1.block-title{"data-amtitle" => "Search events"}
      = current_page.data.title

    .content

      // search box above results
      = partial :"blocks/search-header-search-box"

      .view-header
        = partial :"nav/search-tabs"
        = partial :"nav/search-actions"

      .view-search-results
        .view-content
          = partial :"teasers/event-no-image"
          = partial :"teasers/event-to-join"
          = partial :"teasers/event-with-location"
          = partial :"teasers/event-with-image"
          = partial :"teasers/event-dummy1"
          = partial :"teasers/event-dummy2"

%aside.l-sidebar.sidebar
  .block#block-filter
    %i.block-icon.icon-bg-event.icon-adjust
    %h2.block-title{"data-amtitle" => "Filter"} Filter
    .content
      %form
        = partial :"blocks/search_filters/event_date"
        = partial :"blocks/search_filters/groups"
        = partial :"blocks/search_filters/location_range"
        = partial :"blocks/search_filters/created"
        = partial :"blocks/search_filters/tags"
        = partial :"blocks/search_filters/author"
        = partial :"blocks/search_filters/form-action"

