title: Search groups
body_class: not-front logged-in page-search l-has-sidebar
user_role: lu
search_page: groups
---

= partial :"blocks/breadcrumbs"

.l-main-column

  #content.block.current
    = partial :"blocks/lu/add-content"
    %i.block-icon.icon-bg-group.icon-search
    %h1.block-title{"data-amtitle" => "Search groups"}
      = current_page.data.title

    .content

      // search box above results
      = partial :"blocks/search-header-search-box"

      .view-header
        = partial :"nav/search-tabs"
        = partial :"nav/search-actions"

      .view-search-results
        .view-content
          = partial :"teasers/group-no-image"
          = partial :"teasers/group-with-image-subscribed"
          = partial :"teasers/group-with-image"
          = partial :"teasers/group-no-image"
          = partial :"teasers/group-with-image-subscribed"
          = partial :"teasers/group-with-image"
          = partial :"teasers/group-no-image"
          = partial :"teasers/group-with-image"


%aside.l-sidebar.sidebar
  .block#block-filter
    %i.block-icon.icon-bg-group.icon-adjust
    %h2.block-title{"data-amtitle" => "Filter"} Filter
    .content
      %form
        = partial :"blocks/search_filters/my_groups"
        = partial :"blocks/search_filters/group_type"
        = partial :"blocks/search_filters/location_range"
        = partial :"blocks/search_filters/group_skills"
        = partial :"blocks/search_filters/group_size"
        = partial :"blocks/search_filters/tags"
        = partial :"blocks/search_filters/form-action"

