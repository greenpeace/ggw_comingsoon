#shoutbox.block.block-shoutbox
  %i.block-icon.icon-shout.icon-bg-action
  %h2.block-title Shoutbox
  .content
    %form.shout-form
      .form-shout-message
        %textarea#shoutbox-comment{:cols => "50", :placeholder => "Write a shout...", :rows => "1"}
      %input.tooltip.form-shout-file{:accept => "image/*", "data-tip" => "Attach a photo", :type => "file"}/
      %span#remain
      %input.form-shout-submit{:type => "submit", :value => "share"}/
    %section.shouts
      %article.shout
        .avatar-holder
          %a{:href => "#", :title => "View user profile"}
            %picture
              %img{:alt => "Dora Tilman", :src => "http://placehold.it/60x60", :srcset => "http://placehold.it/120x120 2x"}/
        .comment-holder
          .comment-head
            %a.comment-author{:href => "#", :title => "View profile"}
              Dora Tilman
          .comment-body
            I agree.
          .comment-footer
            %span.comment-timestamp 5 minutes ago
            %span.comment-actions
              %a.comment-actionlink{:href => "#"} reply
              %a.comment-actionlink{:href => "#"} edit
              %a.comment-actionlink{:href => "#"} delete
