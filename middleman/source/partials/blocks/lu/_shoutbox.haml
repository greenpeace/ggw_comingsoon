#shoutbox.block.block-shoutbox
  %i.block-icon.icon-shout.icon-bg-action
  %h2.block-title Shoutbox
  .content
    %form.shout-form
      .form-shout-message
        %textarea#shoutbox-comment{:cols => "50", :placeholder => "Write a shout...", :rows => "1"}
      %input.tooltip.form-shout-file{:accept => "image/*", "data-tip" => "Attach a photo", :type => "file"}/
      %span#remain
      %input.form-shout-submit{:type => "submit", :value => "share"}/
    %section.shouts
      %article.shout
        = partial :"blocks/lu/shout-avatar"
        .comment-holder
          .comment-head
            %a.comment-author{:href => "#", :title => "View profile"}
              = lorem.name
          .comment-body
            = lorem.words 3
          .comment-footer
            %span.comment-timestamp 5 minutes ago
            = partial :"blocks/lu/shout-actions"
